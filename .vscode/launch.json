    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "node",
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register/transpile-only"], //porque es de consola
            "name": "Debug index.ts tsNode",
            "args": ["src/index.ts"],
            "cwd": "${workspaceRoot}",
            "internalConsoleOptions": "openOnFirstSessionStart", //todas las opciones de consola se ejecuten en dupuraci√≥n
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ],
        }
    ]
}